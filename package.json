{
  "name": "campaign-journal",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "check-container": "sudo docker inspect -f '{{.State.Running}}' 'mysql-dev' || exit 1",
    "predev": "sudo npm run check-container || (cd ../campaign-journal-backend/ && npm run dbu:dev)",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "tsc": "tsc",
    "prisma:pull": "dotenv -e .env.development -- npx prisma db pull",
    "prisma:generate": "prisma generate",
    "send": "sudo cp -r .next /var/www/dnd.rtlan.gr/ && sudo cp package.json .nvmrc /var/www/dnd.rtlan.gr/ && cd /var/www/dnd.rtlan.gr &&  sudo npm install --production && sudo m2 start npm --name 'dnd-server' -- start -- --port 3500",
    "build:cp": "npm run build &&  npm run send",
    "dbu:dev": "sudo docker compose -f /home/nik/code/campaign-journal/campaign-journal-backend/Docker/docker-compose-dev.yml up -d",
    "dbd:dev": "sudo docker compose -f /home/nik/code/campaign-journal/campaign-journal-backend/Docker/docker-compose-dev.yml down",
    "dbu:prod": "sudo docker compose -f /home/nik/code/campaign-journal/campaign-journal-backend/Docker/docker-compose-prod.yml up -d",
    "dbd:prod": "sudo docker compose -f /home/nik/code/campaign-journal/campaign-journal-backend/Docker/docker-compose-prod.yml down"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.15.1",
    "@mui/material": "^5.15.1",
    "@prisma/client": "^5.7.0",
    "@tanstack/react-query": "^5.14.6",
    "@types/toastify-js": "^1.12.3",
    "axios": "^1.6.2",
    "next": "14.0.3",
    "prisma": "^5.7.0",
    "react": "^18",
    "react-dom": "^18",
    "toastify-js": "^1.12.0"
  },
  "devDependencies": {
    "@tanstack/react-query-devtools": "^5.14.6",
    "@types/node": "^20.10.5",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.0.3",
    "eslint-plugin-query": "^0.8.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "prettier": "2",
    "typescript": "^5.3.3"
  }
}
